# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key-at-least-32-characters-long
FLASK_ENV=production

# Database Configuration
# For Development (SQLite):
# DATABASE_URL=sqlite:///cms.db

# For Production (PostgreSQL):
DATABASE_URL=postgresql://username:password@localhost:5432/altius_biotech

# Common PostgreSQL hosting services:
# Heroku: postgres://user:pass@host:5432/dbname
# DigitalOcean: postgresql://user:pass@host:25060/dbname?sslmode=require
# AWS RDS: postgresql://user:pass@endpoint.rds.amazonaws.com:5432/dbname
# Render: postgresql://user:pass@host/dbname

# Admin Configuration (Change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# File Upload Configuration
MAX_CONTENT_LENGTH=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
